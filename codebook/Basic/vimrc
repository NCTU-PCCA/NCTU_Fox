set nu ai si cin ts=4 sw=4 sts=4 expandtab

nmap #4 :! date > %<.pt; cat -n % > %<.pt; lpr %<.pt <CR>
autocmd filetype cpp nmap #9 :! clear ; g++ -std=c++11 -O2 -D AC -o %<.out % ; for i in %<*.in; do echo $i; ./%<.out < $i; echo ""; done <CR>
autocmd filetype python nmap #9 :! clear ; chmod +x %; for i in %<*.in; do echo $i; ./% < $i; echo ""; done <CR>
autocmd filetype cpp nmap #0 :! clear ; g++ -std=c++11 -O2 -D AC -o %<.out % ; ./%<.out <CR>
autocmd filetype python nmap #0 :! clear ; chmod +x %; ./% <CR>
nmap <C-I> :! read -p "CASE:" CASE; gedit %<_$CASE.in <CR>
